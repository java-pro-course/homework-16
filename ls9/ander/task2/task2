                System.out.println("Okey! That's your new initials : ");
                System.out.println("-----------------------------");
                s.setName(nname);
                s.setName2(nname2);
                s.setName3(nname3);
                s.getInfo();
            }
        if(a==0) {
            System.out.println("Enter your new name: ");
            String nname = in.nextLine();
            nname = in.nextLine();
            System.out.println("Enter your new surname: ");
            String nname2 = in.nextLine();
            System.out.println("Enter your new middle name: ");
            String nname3 = in.nextLine();
            System.out.println("Okey! That's your new initials: ");
            System.out.println("-----------------------------");
            e.setName(nname);
            e.setName2(nname2);
            e.setName3(nname3);

                e.getInfo();
            }
        if (!(a==1||a==0)){
            System.out.println("Hehehe.... NO!!!! Enter another initials; ");
        }
            System.out.println("-----------------------------");
        System.out.println("It's time to get old >;)");
            System.out.println("-------------------------");
        s.happyBirthday();
            s.happyBirthday();
            s.happyBirthday();
            s.getInfo();
            e.happyBirthday();
            e.happyBirthday();
            e.happyBirthday();
            e.happyBirthday();
            e.happyBirthday();
